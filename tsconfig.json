{
  "compilerOptions": {
    "outDir": "./.tsbuild/",
    "inlineSourceMap": true,
    "allowJs": true,
    "sourceMap": false,
    "target": "es2019",
    "module": "commonjs",
    "removeComments": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "webdriverio/sync",
      "@wdio/sync",
      "@wdio/mocha-framework",
      "@types/chai"
    ],
  },
  "include": [
    "./test/**/*.ts"
  ]
}
